<form action="/search" method="post">
  <textarea name="words" rows="8" cols="40"></textarea>
  <input type="submit">
</form>


<% if @list %>
<p>單字數量：<%= @list.count %></p>

<div class="kk">
  <ul>
    <% @list.each do |word|  %>
      <li><%= word %></li>
    <% end %>
  </ul>

  <ul>
    <% @result.each do |word|  %>
      <% if word.class != Array %>
        <li><%= word %></li>
      <% else %>
        <li><%= "#{word.join(" ")}"%></li>
      <% end %>
    <% end %>
  </ul>
</div>

<p>Time: <%= @sss %></p>
<% end %>
